@model CoreFinalTest.Models.ChetuStudentModel



<div class="row">
    <div class="col-md-10">

        <form asp-action="Login">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div><h1 style="text-align:center;text-decoration-color:#ff0000;background-color:#ffd800">Login Page</h1></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger">@TempData["Invalid"] </span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger">@ViewBag.Inv </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login Here" class="btn btn-primary" />
                <a asp-action="AddStudent" asp-controller="Home" class="btn btn-danger">Regiter</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
